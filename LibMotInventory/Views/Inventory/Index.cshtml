@model IEnumerable<LibMotInventory.Model.Data.Inventory>

@{
	ViewData["Title"] = "Index";
}
@if (Model.Count() > 0)
{
	<div style="margin-top:-1em">
		<div class="row">
			<div class="col-md-1"></div>
			<div class="p-2 col-md-10">
				<table class="table table-striped table-hover table-responsive" style="width:100%">
					<thead class="bg-dark text-white">
						<tr>
							<th>
								<label>Item Name</label>
							</th>
							<th>
								<label>Number of Item</label>
							</th>
							<th>
								<label>Cost</label>
							</th>
							<th>
								<label>Inventory Number</label>
							</th>
							<th>
								<label>Item Description</label>
							</th>
							<th>
								<label>Serial Number</label>
							</th>
							<th>
								<label>Estimated Value</label>
							</th>
							<th>
								<label>Vend or Lesser</label>
							</th>
							<th>
								<label>Date Aquired</label>
							</th>
							<th><label>Actions</label></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>
									@Html.DisplayFor(modelItem => item.ItemName)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.NumberOfItem)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Cost)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.InventoryNumber)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.ItemDescription)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.SerialNumber)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.EstimatedValue)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.VendorLesser)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.DateAquired)
								</td>
								<td>
									<a asp-action="Edit" asp-route-id="@item.Id" class="text-info">Edit</a> |
									<a asp-action="Details" asp-controller="Home" asp-route-id="@item.Id" class="text-primary">Detail</a> |
									<a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>

				<div>
					<p>
						<a asp-action="CreateInventroy" asp-controller="Inventory" class="btn btn-primary">Create new inventory</a>
					</p>
				</div>
			</div>
			<div class="col-md-1"></div>
		</div>
	</div>
}
else
{
	<div>
		<p>There is no record in our system yet!</p>
	</div>
}


