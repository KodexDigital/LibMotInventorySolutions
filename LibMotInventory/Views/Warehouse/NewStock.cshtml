@model LibMotInventory.ViewModels.WarehouseViewModel

@{
	ViewData["Title"] = "New Stock";
}
<div style="margin-top:-1em">
	<div class="bg-info bg-light p-4 row">
		<h1 class="col-md-6">ADD NEW STOCK</h1>
		@if (ViewBag.Addded != null)
		{
			<div class="alert alert-warning alert-dismissible fade show h3" role="alert">
				<strong>@Model.ItemName </strong> <hr /> @ViewBag.Addded
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		}
	</div>
	<div class="row pt-3">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<form method="post" asp-action="NewStock" enctype="multipart/form-data">
				<div class="form-group">
					<label asp-for="ItemName"></label>
					<input asp-for="ItemName" class="form-control">
					<span asp-validation-for="ItemName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="TotalInSotck"></label>
					<input asp-for="TotalInSotck" class="form-control">
					<span asp-validation-for="TotalInSotck" class="text-danger"></span>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-primary rounded-pill">Save new stock</button>
				</div>

			</form>
		</div>
		<div class="col-md-3"></div>
	</div>

</div>
